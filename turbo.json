{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "dependsOn": [
        "lint",
        "^build"
      ],
      "outputs": [
        "dist",
        "out",
        ".next"
      ]
    },
    "start": {
      "persistent": true,
      "cache": false,
      "dependsOn": [
        "build"
      ]
    },
    "lint": {},
    "format": {
      "cache": false
    }
  },
  "globalDependencies": [
    "tsconfig.json"
  ]
}